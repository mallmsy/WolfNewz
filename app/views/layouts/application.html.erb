<!DOCTYPE html>
<html>
  <head>
    <title>Wolf Newz</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.css">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
    <% if @logged_in %>
    <div class="ui menu">
      <a href= <%= user_path(@logged_in_user_id) %> class="item">My Profile</a>
      <a href= <%= featured_path %> class="item">Featured Articles</a>
    <div class="right menu">
      <a href= <%= log_out_path %> data-method="delete" class="item">LOGOUT</a>
    </div>
  </div>
  Select Topic:
      <%= form_tag by_topic_path, method: :get do%>
      <%= select_tag(:topic, options_for_select(@topics)) %>
        <input type="submit" value="Find">
      <% end %>
    <% else %>
    <div class="ui menu">
      <a href= <%= new_login_path %> class="item">LOGIN</a>
      <a href= <%= new_user_path %> class="item">SIGNUP</a>
    <div class="right menu">
      <a href= <%= root_path %> class="item">HOME</a>
    </div>
  </div>
    <% end %>
    </header>

    <%= yield %>
  </body>
</html>
