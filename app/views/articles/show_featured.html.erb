<div class="ui cards">
  <% @articles.each do |article| %>
  <div class="card">
    <div class="content">
      <img class="right floated mini ui image" src= <%= article.img_url %> >
      <div class="header">
        <a href= <%= article_path(article) %> > <%= article.title %> </a>
      </div>
      <div class="meta">
        Slant: <%= article.slant %>
      </div>
      <div class="description">
        <%= article.summary %>
      </div>
    </div>
