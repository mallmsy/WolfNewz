<ul>
  <% if flash[:errors] %>
  <li>
    <%= flash[:errors] %>
  </li>
  <% end %>
</ul>

<h1>LOGIN</h1>

<%= form_tag login_index_path do %>
   <ul>
    <li>
      <%= label_tag :username %>
      <%= text_field_tag :username %><br>
    </li>
    <br>
    <li>
      <%= label_tag :password %>
      <%= password_field_tag :password %><br>
    </li>
  </ul>
  <%= submit_tag "LOGIN" %><br>
<% end %>
<br>
<%= link_to "Having trouble logging in? Register a new account here.", new_user_path %>
